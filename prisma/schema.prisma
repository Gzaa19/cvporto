// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

// Hero Status Cards Model
model HeroStatus {
  id          String   @id @default(cuid())
  location    String   @default("INDONESIA")
  currentRole String   @default("FRONT END")
  status      String   @default("AVAILABLE")
  subtitle    String   @default("SOFTWARE ENGINEER")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// About Section Content
model AboutContent {
  id        String   @id @default(cuid())
  greeting  String   @default("Hi, I'm")
  name      String   @default("Gaza Chansa")
  introText String   @default("A Software Engineer who loves building modern web applications with cutting-edge technologies.")
  focusText String   @default("Currently focusing on creating interactions that feel natural and performance that feels instantaneous.")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Admin User for Authentication
model AdminUser {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String   @default("Admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Project Model
model Project {
  id          String   @id @default(cuid())
  title       String
  subtitle    String   @default("")
  description String
  tags        String
  imageUrl    String?
  projectUrl  String?
  githubUrl   String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Tech Stack / Skills Model
model Skill {
  id        String   @id @default(cuid())
  name      String
  category  String
  iconName  String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Experience / Work History Model
model Experience {
  id          String   @id @default(cuid())
  role        String
  company     String
  location    String   @default("")
  workType    String   @default("On-site")
  period      String
  description String
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
